mixin statueForm(statue = {})
  form(action=`/add/${statue._id || ''}` method="POST" class="card")
    label(for="name") Name
    input(type="text" name="name" value=statue.name)
    label(for="description") Description
    textarea(name="description")= statue.description
    - const choices = ['Female Artist', 'Sculpture Park', 'Monument']
    - const tags = statue.tags || []
    ul.tags
      each choice in choices
        .tag.tag__choice
          input(type="checkbox" id="choice" value=choice name="tags" checked=(tags.includes(choice)))
          label(for=choice) #{choice}
    input(type="submit" value="Save â†’" class="button")
