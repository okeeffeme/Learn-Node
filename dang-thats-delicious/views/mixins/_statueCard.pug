mixin statueCard(statue = {})
  .statue
    .statue__hero
      if user
        .statue__actions
          .statue__action.statue__action--edit
            a(href=`/statues/${statue._id}/edit`)
              != h.icon('pencil')
      img(src=`/uploads/${statue.photo || 'statue.jpg'}`)
      h2.title
        a(href=`/statue/${statue.slug}`) #{statue.title}
    .statue__details
      p= statue.description.split(' ').slice(0, 25).join(' ')
