mixin statueCard(statue = {})
  .store
    .store__hero
      .store__actions
        .store__action.store__action--edit
          a(href=`/statues/${statue._id}/edit`)
            != h.icon('pencil')
      img(src=`/uploads/${statue.photo || 'store.png'}`)
      h2.title
        a(href=`/statue/${statue.slug}`) #{statue.name}
    .store__details
      p= statue.description.split(' ').slice(0, 25).join(' ')
