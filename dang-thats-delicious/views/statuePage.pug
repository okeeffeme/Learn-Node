extends layout

block content
  .single
    .single__hero
      img.single__image(src=`/uploads/${statue.photo || 'store.png'}`)
      h2.title.title--single
        a(href=`/statues/${statue.slug}`) #{statue.title}

  .single__details.inner
    img.single__map(src=h.staticMap(statue.location.coordinates))
    p.single__location= statue.artist
